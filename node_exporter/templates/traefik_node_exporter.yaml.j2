http:
  middlewares:
    node-exporter-replacepath:
      replacePath:
        path: "/metrics"
  services:
    node-exporter:
      loadBalancer:
        servers:
        - url: "http://{{ ansible_facts['docker0']['ipv4']['address'] }}:9100"
  routers:
    node-exporter:
      rule: "Host(`metrics.home`) && Path(`/node`)"
      middlewares:
      - node-exporter-replacepath
      service: node-exporter

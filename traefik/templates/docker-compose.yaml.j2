version: '3.7'

networks:
  traefik-proxy:
    external: true
services:
  traefik:
    image: traefik:{{ traefik_docker_image_tag }}
    networks:
      - traefik-proxy
    restart: unless-stopped
    ports:
      - "80:80"
      - "443:443"
      - "127.0.0.1:8080:8080"
    volumes:
      - /mnt/{{ hostname }}-volume/traefik/config:/etc/traefik
      - /var/run/docker.sock:/var/run/docker.sock
      - /var/log/traefik:/var/log
    labels:
      # middleware redirect: https://traefik.io/blog/traefik-2-0-docker-101-fc2893944b9d/
      - "traefik.http.middlewares.redirect-to-https.redirectscheme.scheme=https"
      # global redirect to https: all hosts, from the http entry point, should
      # use the redirect middleware
      - "traefik.http.routers.redirs.rule=hostregexp(`{host:.+}`)"
      - "traefik.http.routers.redirs.entrypoints=http"
      - "traefik.http.routers.redirs.middlewares=redirect-to-https"
